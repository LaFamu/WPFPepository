<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Demo.Pages.Layouts.GridPage"
             Title="GridPage">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Text="Grid Demo" Style="{StaticResource TitleLabel}"></Label>
            <Label Text="Column 0, Row 1" Grid.Column="0" Grid.Row="1" 
           WidthRequest="200" />
            <Label Text="Column 1, Row 1" Grid.Column="1" Grid.Row="1" />
            <Label Text="Column 0, Row 2" Grid.Column="0" Grid.Row="2"/>
            <Label Text="Column 1, Row 2" Grid.Column="1" Grid.Row="2" />
        </Grid>
    </ScrollView>
</ContentPage>